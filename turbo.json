{
	"globalEnv": [
		"MONGODB_URI",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET",
		"NEXTAUTH_URL",
		"NEXTAUTH_SECRET",
		"STRIPE_SECRET_KEY",
		"NEXT_PUBLIC_API_BASE_URL",
		"STRIPE_WEBHOOK_SECRET"
	],
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"check-types": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
